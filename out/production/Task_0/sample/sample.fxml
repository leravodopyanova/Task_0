<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <VBox prefHeight="394.0" prefWidth="352.0">
         <children>
            <FlowPane prefHeight="111.0" prefWidth="352.0" style="-fx-background-color: #778899; -fx-border-color: black;">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <children>
                  <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" style="-fx-background-color: #B0C4DE; -fx-border-color: black;" text="Сумма в чеке" textAlignment="JUSTIFY">
                     <FlowPane.margin>
                        <Insets left="30.0" top="40.0" />
                     </FlowPane.margin>
                     <font>
                        <Font name="Chiller" size="16.0" />
                     </font>
                     <effect>
                        <Blend />
                     </effect>
                  </Label>
                  <TextField fx:id="SumTextField" alignment="CENTER" prefHeight="26.0" prefWidth="154.0">
                     <FlowPane.margin>
                        <Insets left="30.0" top="40.0" />
                     </FlowPane.margin>
                  </TextField>
               </children>
            </FlowPane>
            <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #FFFFF0; -fx-border-style: dotted;">
               <children>
                  <Button fx:id="BigPrBtn" mnemonicParsing="false" onAction="#BigOnClick" text="+ Большие чаевые" textAlignment="CENTER" wrapText="true">
                     <HBox.margin>
                        <Insets left="30.0" top="35.0" />
                     </HBox.margin>
                  </Button>
                  <Label fx:id="BigTipsLbl" alignment="CENTER" prefHeight="27.0" prefWidth="102.0" style="-fx-background-color: white; -fx-border-color: black;">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="50.0" top="35.0" />
                     </HBox.margin></Label>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #FFFFF0; -fx-border-style: dotted;">
               <children>
                  <Button fx:id="MiddlePrBtn" mnemonicParsing="false" onAction="#MiddleOnClick" text="+ Обычные чаевые">
                     <HBox.margin>
                        <Insets left="30.0" top="35.0" />
                     </HBox.margin>
                  </Button>
                  <Label id="MiddleTipsLbl" fx:id="MiddleTipsLbl" alignment="CENTER" contentDisplay="CENTER" prefHeight="27.0" prefWidth="102.0" style="-fx-background-color: white; -fx-border-color: black;">
                     <HBox.margin>
                        <Insets left="50.0" top="35.0" />
                     </HBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font></Label>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #FFFFF0; -fx-border-style: dotted;">
               <children>
                  <Button fx:id="SmallPrBtn" mnemonicParsing="false" onAction="#SmallOnClick" text=" + Немного чаевых">
                     <HBox.margin>
                        <Insets left="30.0" top="35.0" />
                     </HBox.margin>
                  </Button>
                  <Label fx:id="SmallTipsLbl" alignment="CENTER" prefHeight="27.0" prefWidth="102.0" style="-fx-background-color: white; -fx-border-color: black;">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="50.0" top="35.0" />
                     </HBox.margin></Label>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</GridPane>
